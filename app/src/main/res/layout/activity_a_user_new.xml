<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.mit.mit.A_user_new">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">






    <TextView
        android:id="@+id/newUser_lb_nom"
        android:text="Nom :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/newUser_tb_nom"
        android:hint="Entrez votre nom"
        android:textColor="#ac035d"
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:background="#ac035d"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />


    <TextView
        android:id="@+id/newUser_lb_prenom"
        android:text="Prénom :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/newUser_tb_prenom"
        android:hint="Entrez votre prénom"
        android:inputType="textPersonName"
        android:textColor="#ac035d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:background="#ac035d"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />


    <TextView
        android:id="@+id/newUser_lb_mail"
        android:text="Adresse mail :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/newUser_tb_mail"
        android:hint="Entrez votre adresse mail"
        android:inputType="textEmailAddress"
        android:textColor="#ac035d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:background="#ac035d"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />


    <TextView
        android:id="@+id/newUser_lb_mdp1"
        android:text="Créer un mot de passe :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/newUser_tb_mdp1"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:textColor="#ac035d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />




    <TextView
        android:id="@+id/newUser_lb_mdp2"
        android:text="Valider le mot de passe :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/newUser_tb_mdp2"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:textColor="#ac035d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />



    <TextView
        android:id="@+id/newUser_lb_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ac035d"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>


    <Button
        android:id="@+id/newUser_btn_valider"
        android:text="Valider"
        android:textColor="#ac035d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        </LinearLayout>
</ScrollView>

</RelativeLayout>
