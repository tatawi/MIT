<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mit.mit.A_affichageProjet"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">


    <LinearLayout
        android:id="@+id/projetPrep_linearLayoutUp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/projetPrep_lb_description"
            android:text="Ceci est une description pour un voyage qui s'annonce paplitant et fort interessant ! Let's go !"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_above="@+id/newUser_btn_valider"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="31dp"
            android:textColor="#ac035d" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/projetPrep_linearLayoutMiddle"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/projetPrep_linearLayoutUp">

        <TextView
            android:id="@+id/projetPrep_lb_txtCout"
            android:text="Coût : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_above="@+id/newUser_btn_valider"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="31dp"
             />

        <TextView
            android:id="@+id/projetPrep_lb_cout"
            android:text="125€"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_above="@+id/newUser_btn_valider"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="31dp"
            android:textColor="#ac035d" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/projetPrep_tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/projetPrep_linearLayoutMiddle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></LinearLayout>


</RelativeLayout>
