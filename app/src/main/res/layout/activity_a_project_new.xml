<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mit.mit.A_project_new">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">



            <GridLayout
                android:id="@+id/newProject_gridLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                >

                <TextView
                    android:id="@+id/newProject_lb_nom"
                    android:text="Nom :"
                    android:textColor="#ac035d"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    />

                <EditText
                    android:id="@+id/newProject_tb_nom"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/newProject_lb_description"
                    android:text="Description :"
                    android:textColor="#ac035d"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/newProject_tb_description"
                    android:layout_row="1"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/newProject_lb_debut"
                    android:text="DÃ©but :"
                    android:textColor="#ac035d"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    />

                <EditText
                    android:id="@+id/newProject_tb_debut"
                    android:hint="select date ->"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:enabled="false"
                    android:editable="false"
                    android:inputType="text" />

                <ImageButton
                    android:id="@+id/newProject_btn_dateDebut"
                    android:text="Add"
                    android:src="@drawable/ic_addproject_adddate"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="2"
                    />

                <TextView
                    android:id="@+id/newProject_lb_fin"
                    android:text="Fin :"
                    android:textColor="#ac035d"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    />

                <EditText
                    android:id="@+id/newProject_tb_fin"
                    android:hint="select date ->"
                    android:inputType="text"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:enabled="false" />


                <ImageButton
                    android:id="@+id/newProject_btn_dateFin"
                    android:text="Add"
                    android:src="@drawable/ic_addproject_adddate"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="2"
                    />

                <TextView
                    android:id="@+id/newProject_lb_couleur"
                    android:text="Couleur :"
                    android:textColor="#ac035d"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"
                    />

                <EditText
                    android:id="@+id/newProject_tb_couleur"
                    android:hint="rouge, bleu, vert, jaune, violet"
                    android:inputType="text"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_row="4"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/newProject_lb_participants"
                    android:text="Participants :"
                    android:textColor="#ac035d"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="0"
                    />

                <EditText
                    android:id="@+id/newProject_tb_participants"
                    android:hint="adresse mail"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:inputType="textEmailAddress" />

                <ImageButton
                    android:id="@+id/newProject_btn_addParticipant"
                    android:src="@drawable/ic_addproject_adduser"
                    android:background="@null"
                    android:text="Add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="2"
                    />
            </GridLayout>


            <ListView
                android:id="@+id/newProject_lv_listView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/newProject_gridLayout"
                />

            <ImageButton
                android:id="@+id/newProject_btn_addProject"
                android:text="New Button"
                android:src="@drawable/ic_addproject_create"
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"/>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>